---
import BaseLayout from '../layouts/BaseLayout.astro';
import { Image } from 'astro:assets';
import PostCard from "../components/PostCard.astro";
import RDFCCPhoto from "../assets/RDFCC_Gravel.png";

// utils imports
import { formatFrontPage } from "../scripts/utils";

const pageTitle = "";
const allPosts = await Astro.glob("./posts/*.md");
const formattedPosts = formatFrontPage(allPosts,{filterFrontPage: true});
---
<style>
	h1 {
	  color: #205b34;
	  font-size: 4rem;
	}
</style>
  
<BaseLayout pageTitle={pageTitle}>

  <style>
    h1 {
      color: #205b34;
      font-size: 4rem;
    }
    </style>
<Image src={RDFCCPhoto} alt="Royal Dean Forest Logo" ;/>
  
  <section class="container" aria-label="New Blog Posts">
    <h2 class="h1">Latest News</h2>
    <div class="frontpage-container">
      {
        formattedPosts.map((post) => (
          <PostCard
            frontmatter={post.frontmatter}
            url={post.url}
            tagType="h3"
          />
        ))
      }
    </div>
  </section>
</BaseLayout>

